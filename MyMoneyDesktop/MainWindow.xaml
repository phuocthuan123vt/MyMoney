<Window x:Class="MyMoneyDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMoneyDesktop"
        mc:Ignorable="d"
        Title="MyMoney - Quản lý chi tiêu" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#F5F7FA">
    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <DropShadowEffect x:Key="DropShadowEffect" Color="Black" Opacity="0.5" BlurRadius="10" Direction="270" ShadowDepth="5"/>
    </Window.Resources>

    <Grid>
        <Border x:Name="ToastNotification"
                Background="#FFC107"
                CornerRadius="8"
                Padding="12,8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Margin="0,-10,0,0"
                Visibility="Visible"
                Opacity="0"
                RenderTransformOrigin="0.5,0">
            <Border.RenderTransform>
                <TranslateTransform Y="-50"/>
            </Border.RenderTransform>

            <TextBlock x:Name="ToastText"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="14"
                       Text="Đang kiểm tra hạn mức..."/>
        </Border>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Quản lý Chi tiêu" FontSize="28" FontWeight="Bold" Foreground="#1A202C"/>
                    <TextBlock Text="Theo dõi thu chi cá nhân của bạn" FontSize="16" Foreground="#718096"/>
                </StackPanel>
                <Button Grid.Column="1" Content="+ Thêm giao dịch" VerticalAlignment="Center" Style="{StaticResource PrimaryButton}" Click="AddTransactionButton_Click"/>
            </Grid>

            <!-- Summary Cards -->
            <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,20">
                <!-- Thu nhập -->
                <Border Style="{StaticResource SummaryCard}">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Thu nhập tháng này" Style="{StaticResource CardTitle}"/>
                            <TextBlock Text="{Binding ThuNhap, StringFormat={}{0:N0} ₫}"
                                    Style="{StaticResource CardAmount}"
                                    Foreground="#48BB78"/>
                        </StackPanel>
                        <TextBlock Text="&#xE8C7;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                Foreground="#48BB78"
                                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0"/>
                    </Grid>
                </Border>

                <!-- Chi tiêu -->
                <Border Style="{StaticResource SummaryCard}">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Chi tiêu tháng này" Style="{StaticResource CardTitle}"/>
                            <TextBlock Text="{Binding ChiTieu, StringFormat={}{0:N0} ₫}"
                                    Style="{StaticResource CardAmount}"
                                    Foreground="#F56565"/>
                        </StackPanel>
                        <TextBlock Text="&#xE719;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                Foreground="#F56565"
                                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0"/>
                    </Grid>
                </Border>

                <!-- Số dư -->
                <Border Style="{StaticResource SummaryCard}">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Số dư hiện tại" Style="{StaticResource CardTitle}"/>
                            <TextBlock Text="{Binding SoDu, StringFormat={}{0:N0} ₫}"
                                    Style="{StaticResource CardAmount}"
                                    Foreground="#4299E1"/>
                        </StackPanel>
                        <TextBlock Text="&#xE72D;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                Foreground="#4299E1"
                                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0"/>
                    </Grid>
                </Border>

                <!-- Tỷ lệ tiết kiệm -->
                <Border Style="{StaticResource SummaryCard}">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Tỷ lệ tiết kiệm" Style="{StaticResource CardTitle}"/>
                            <TextBlock Text="{Binding TiLeTietKiem, StringFormat={}{0:F1}%}"
                                    Style="{StaticResource CardAmount}"
                                    Foreground="#ED8936"/>
                        </StackPanel>
                        <TextBlock Text="&#xE870;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                Foreground="#ED8936"
                                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0"/>
                    </Grid>
                </Border>
            </UniformGrid>


            <!-- Tabs -->
            <TabControl Grid.Row="2" Grid.RowSpan="2" Style="{StaticResource MainTabs}">
                <TabItem Style="{StaticResource MainTabItem}" IsSelected="True">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Tổng quan"/>
                        </StackPanel>
                    </TabItem.Header>
                    <TabItem.Content>
                        <Grid Margin="0,20,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="250"/>
                            </Grid.RowDefinitions>

                            <!-- Charts -->
                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource ChartContainer}" Margin="0,0,10,0">
                                    <TextBlock Text="Biểu đồ Thu chi theo tháng" Style="{StaticResource ChartPlaceholder}"/>
                                </Border>
                                <Border Grid.Column="1" Style="{StaticResource ChartContainer}" Margin="10,0,0,0">
                                    <TextBlock Text="Biểu đồ Chi tiêu theo danh mục" Style="{StaticResource ChartPlaceholder}"/>
                                </Border>
                            </Grid>

                            <!-- Transaction List -->
                            <Border Grid.Row="1" Style="{StaticResource ChartContainer}">
                                <StackPanel>
                                    <TextBlock Text="Danh sách giao dịch" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                    <TextBlock Text="Chưa có giao dịch nào" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#A0AEC0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </TabItem.Content>
                </TabItem>
                <TabItem Style="{StaticResource MainTabItem}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8A1;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Giao dịch"/>
                        </StackPanel>
                    </TabItem.Header>
                    <TabItem.Content>
                        <TextBlock Text="Nội dung tab Giao dịch" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                    </TabItem.Content>
                </TabItem>
                <TabItem Style="{StaticResource MainTabItem}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE946;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Thống kê"/>
                        </StackPanel>
                    </TabItem.Header>
                    <TabItem.Content>
                        <TextBlock Text="Nội dung tab Thống kê" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                    </TabItem.Content>
                </TabItem>
                <TabItem Style="{StaticResource MainTabItem}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7B3;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Hạn mức"/>
                        </StackPanel>
                    </TabItem.Header>
                    <TabItem.Content>
                        <Grid Margin="0,20,0,0">
                            <Border Background="White"
                            CornerRadius="10"
                            Padding="25"
                            BorderBrush="#E2E2E2"
                            BorderThickness="1"
                            SnapsToDevicePixels="True">
                                <StackPanel>
                                    <TextBlock Text="⚙️ Quản lý Hạn mức Chi tiêu"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,20"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Bật hạn mức chi tiêu"
                                               FontWeight="Bold"
                                               Margin="0,0,0,5"/>
                                            <TextBlock Text="Theo dõi và cảnh báo khi chi tiêu vượt hạn mức"
                                               Foreground="Gray" FontSize="12"/>
                                        </StackPanel>

                                        <local:ToggleButtonControl x:Name="toggleControl"
                                                           Grid.Column="1"
                                                           VerticalAlignment="Center"
                                                           Width="45" Height="25"
                                                           OnColor="Black"/>
                                    </Grid>

                                    <StackPanel Margin="0,25,0,0"
                                        Visibility="{Binding IsChecked, ElementName=toggleControl, Converter={StaticResource BoolToVisibility}}">
                                        <Separator Margin="0,0,0,15" Opacity="0.2"/>

                                        <TextBlock Text="Hạn mức chi tiêu hàng tháng"
                                           FontWeight="Bold" Margin="0,0,0,5"/>
                                        <Border CornerRadius="6"
                                        Background="#F7F7F7"
                                        Width="1200"
                                        Height="35"
                                        Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="$"
                                                   VerticalAlignment="Center"
                                                   Foreground="Gray"
                                                   Margin="10,0,5,0"/>
                                                <TextBox x:Name="txtMoneyLimit"
                                                 GotFocus="TextBox_GotFocus"
                                                 LostFocus="TextBox_LostFocus_MoneyLimit"
                                                 Grid.Column="1"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 VerticalContentAlignment="Center"
                                                 FontSize="14"
                                                 Padding="4,0"
                                                 Text="10000000"/>
                                            </Grid>
                                        </Border>

                                        <TextBlock Text="Ngưỡng cảnh báo (%)"
                                           FontWeight="Bold" Margin="0,15,0,5"/>
                                        <Border CornerRadius="6"
                                        Background="#F7F7F7"
                                        Width="1200"
                                        Height="35"
                                        Margin="0,0,0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="🔔"
                                                   VerticalAlignment="Center"
                                                   Foreground="Gray"
                                                   Margin="10,0,5,0"/>
                                                <TextBox x:Name="txtPercentageLimit"
                                                 GotFocus="TextBox_GotFocus"
                                                 LostFocus="TextBox_LostFocus_PercentageLimit"
                                                 Grid.Column="1"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 VerticalContentAlignment="Center"
                                                 FontSize="14"
                                                 Padding="4,0"
                                                 Text="80"/>
                                            </Grid>
                                        </Border>

                                        <Grid Margin="0,0,0,25">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Cảnh báo khi chi tiêu đạt 80% hạn mức"
                                               Foreground="Gray"
                                               FontSize="12"
                                               VerticalAlignment="Center"/>

                                            <Button Grid.Column="1"
                                            Content="💾 Lưu cài đặt"
                                            Width="130"
                                            Height="30"
                                            Margin="10,0,0,0"
                                            Background="Black"
                                            Foreground="White"
                                            BorderThickness="0"
                                            FontWeight="SemiBold"
                                            Cursor="Hand"
                                            Click="BtnSaveLimit_Click"/>
                                        </Grid>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                        </Grid>
                    </TabItem.Content>
                </TabItem>
                <TabItem Style="{StaticResource MainTabItem}">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE716;" FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Danh mục"/>
                        </StackPanel>
                    </TabItem.Header>
                    <TabItem.Content>
                        <TextBlock Text="Nội dung tab Danh mục" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                    </TabItem.Content>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>