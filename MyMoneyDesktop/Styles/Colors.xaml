<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="PrimaryBlue">#4299E1</Color>
    <Color x:Key="PrimaryGreen">#48BB78</Color>
    <Color x:Key="PrimaryRed">#F56565</Color>
    <Color x:Key="PrimaryOrange">#ED8936</Color>
    <Color x:Key="HoverYellow">#FEF3C7</Color>
    <Color x:Key="TextDark">#1A202C</Color>
    <Color x:Key="TextLight">#718096</Color>
    <Color x:Key="BackgroundLight">#F5F7FA</Color>
    <Color x:Key="White">#FFFFFF</Color>

    <SolidColorBrush x:Key="PrimaryColorBrush" Color="#4299E1"/>

    <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlue}"/>
    <SolidColorBrush x:Key="PrimaryGreenBrush" Color="{StaticResource PrimaryGreen}"/>
    <SolidColorBrush x:Key="PrimaryRedBrush" Color="{StaticResource PrimaryRed}"/>
    <SolidColorBrush x:Key="PrimaryOrangeBrush" Color="{StaticResource PrimaryOrange}"/>
    <SolidColorBrush x:Key="HoverYellowBrush" Color="{StaticResource HoverYellow}"/>
    <SolidColorBrush x:Key="TextDarkBrush" Color="{StaticResource TextDark}"/>
    <SolidColorBrush x:Key="TextLightBrush" Color="{StaticResource TextLight}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BorderColor" Color="#E2E8F0"/>
    
    <!-- Aliases for backward compatibility -->
    <SolidColorBrush x:Key="TextColor" Color="{StaticResource TextDark}"/>
    <SolidColorBrush x:Key="MutedTextColor" Color="{StaticResource TextLight}"/>
    <SolidColorBrush x:Key="InputBackgroundColor" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="CardBackgroundColor" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="PrimaryColor" Color="{StaticResource PrimaryBlue}"/>
</ResourceDictionary>
