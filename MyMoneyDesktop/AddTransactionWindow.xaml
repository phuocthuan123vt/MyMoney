<Window x:Class="MyMoneyDesktop.AddTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMoneyDesktop"
        mc:Ignorable="d"
        Title="Thêm giao dịch mới" Height="550" Width="450"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.xaml"/>
                <ResourceDictionary Source="Styles/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Border Background="{StaticResource CardBackgroundColor}" CornerRadius="12" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="Thêm giao dịch mới" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                <TextBlock Text="Nhập thông tin giao dịch thu nhập hoặc chi tiêu của bạn" FontSize="14" Foreground="{StaticResource MutedTextColor}" Margin="0,5,0,20"/>
            </StackPanel>
            <Button x:Name="CloseButton" Click="CloseButton_Click" Style="{StaticResource CloseButton}" HorizontalAlignment="Right" VerticalAlignment="Top"/>

            <!-- Form -->
            <StackPanel Grid.Row="1">
                <!-- Transaction Type -->
                <TextBlock Text="Loại giao dịch" Style="{StaticResource FormLabel}"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
                    <RadioButton x:Name="rbIncome" Content="Thu nhập" IsChecked="True" GroupName="TransactionType" Style="{StaticResource FormRadioButton}"/>
                    <RadioButton x:Name="rbExpense" Content="Chi tiêu" GroupName="TransactionType" Style="{StaticResource FormRadioButton}" Margin="20,0,0,0"/>
                </StackPanel>

                <!-- Amount -->
                <TextBlock Text="Số tiền (VNĐ)" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="txtAmount" Tag="0" Style="{StaticResource FormTextBox}"/>

                <!-- Category -->
                <TextBlock Text="Danh mục" Style="{StaticResource FormLabel}"/>
                <ComboBox x:Name="cmbCategory" Style="{StaticResource FormComboBox}">
                    <ComboBoxItem IsSelected="True">Chọn danh mục</ComboBoxItem>
                </ComboBox>

                <!-- Description -->
                <TextBlock Text="Mô tả" Style="{StaticResource FormLabel}"/>
                <TextBox x:Name="txtDescription" Style="{StaticResource FormTextBox}" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

                <!-- Date -->
                <TextBlock Text="Ngày" Style="{StaticResource FormLabel}"/>
                <DatePicker x:Name="dpDate" Style="{StaticResource FormDatePicker}"/>
            </StackPanel>

            <!-- Footer Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Hủy" Click="CloseButton_Click" Style="{StaticResource SecondaryButton}"/>
                <Button x:Name="btnAddTransaction" Content="Thêm giao dịch" Style="{StaticResource PrimaryButton}" Margin="10,0,0,0" Click="BtnAddTransaction_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
